<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="568.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Título principal -->
        <Label fx:id="labelTitulo" layoutX="28.0" layoutY="84.0" text="Cadastrar Quarto">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        
        <!-- Campo para o número do quarto -->
        <Label fx:id="labelNumeroQuarto" layoutX="28.0" layoutY="146.0" text="Nº do Quarto:" />
        <TextField fx:id="txtNumeroQuarto" layoutX="28.0" layoutY="172.0" prefHeight="26.0" prefWidth="50.0" />
        
        <!-- Campo para a capacidade do quarto -->
        <Label fx:id="labelCapacidade" layoutX="28.0" layoutY="207.0" text="Capacidade:" />
        <TextField fx:id="txtCapacidade" layoutX="28.0" layoutY="225.0" prefHeight="26.0" prefWidth="82.0" />
        
        <!-- Campo para a diária do quarto -->
        <Label fx:id="labelDiaria" layoutX="28.0" layoutY="260.0" text="Diária:" />
        <TextField fx:id="txtDiaria" layoutX="28.0" layoutY="284.0" prefHeight="26.0" prefWidth="82.0" />
        
        <!-- Botão para cadastrar um novo quarto -->
        <Button fx:id="btnCadastrar" layoutX="28.0" layoutY="351.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="253.0" text="Cadastrar Quarto">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        
        <!-- Botão para excluir um quarto cadastrado -->
        <Button fx:id="btnExcluir" layoutX="28.0" layoutY="437.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="253.0" text="Excluir Quarto">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        
        <!-- Título para a tabela de quartos cadastrados -->
        <Label fx:id="labelQuartosCadastrados" layoutX="360.0" layoutY="84.0" text="Quartos Cadastrados">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        
        <!-- Tabela para exibição dos quartos cadastrados -->
        <TableView fx:id="tabelaQuartos" layoutX="360.0" layoutY="129.0" prefHeight="390.0" prefWidth="294.0">
            <columns>
                <!-- Coluna para o número do quarto -->
                <TableColumn fx:id="colNumero" prefWidth="87.0" text="Nº do Quarto" />
                <!-- Coluna para a capacidade do quarto -->
                <TableColumn fx:id="colCapacidade" prefWidth="103.0" text="Capacidade" />
                <!-- Coluna para o valor da diária -->
                <TableColumn fx:id="colDiaria" prefWidth="102.0" text="Diária" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
